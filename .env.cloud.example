# RADON Runtime Configuration for Yandex Cloud

# Model architecture (gpt2, t5, hybrid)
RADON_ARCH=gpt2

# Model configuration file
RADON_CONFIG=configs/model_config_small.json

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Model/Tokenizer paths
MODEL_CONFIG_PATH=configs/model_config_small.json
MODEL_PATH=./models/checkpoint
TOKENIZER_PATH=./tokenizer/checkpoint

# Device (cpu, cuda)
DEVICE=cpu

# VK Bot Configuration (optional)
VK_BOT_TOKEN=
VK_GROUP_ID=
VK_CONFIRMATION_CODE=
VK_ACCESS_TOKEN=

# Hugging Face (optional, for loading models)
HF_TOKEN=
